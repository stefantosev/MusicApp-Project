@model List<MusicApp.Domain.Track>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-secondary" asp-controller="Tracks" asp-action="Create">Add New Track</a>
    </div>

    @for(int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 mb-4 d-flex"> 
            <div class="card w-100" style="height: 100%;">
                <img class="card-img-top" src="@item.Image" alt="Card image cap" style="object-fit: cover; height: 200px;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <h5 class="card-title">Artist: @item.Artist.Name</h5>
                    <p class="card-text">@item.Duration min</p>
                    <h6>Price: $@item.Price</h6>
                    <div class="mt-auto">
                        <a asp-controller="Tracks" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-dark">Edit</a>
                        <a asp-controller="Tracks" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-secondary">Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>

        if (i % 3 == 2 || i == Model.Count - 1)
        {
            @:</div>
        }
    }
</div>
